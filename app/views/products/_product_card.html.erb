<% @products.each do |product| %>
  <div class="col mb-5">
    <div class="card h-100">
      <% if product.image.attached? %>
        <%= image_tag product.image, class: "card-img-top img-fluid", style: "width: 1000%; height: 100%; object-fit: cover;", alt: "..." %>
      <% end %>
      <% unless product.image.attached? %>
        <%= image_tag "https://dummyimage.com/450x300/dee2e6/6c757d.jpg" , class: "card-img-top", style: "width: 100%; height: 100%; object-fit: cover;" %>
      <% end %>



      <!-- 商品の詳細-->
      <div class="card-body p-4">
        <div class="text-center">
          <!-- 商品名-->
          <h5 class="fw-bolder"><%= product.name %></h5>
          <div><%= "値段は#{product.price} 円" %></div>
          <div><%= "在庫は#{product.stock} 個" %></div>
          <a href="<%= product_path(product) %>" class="btn btn-primary mt-3">詳細画面へ</a>
        </div>
      </div>
    </div>
  </div>
<% end %>
