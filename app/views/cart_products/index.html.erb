<div class="link-flex">
    <%= link_to 'さらに商品をカートへ追加する', root_path, class: 'btncss' %>
    <%=  link_to "homeへ", root_path, class: 'btncss' %>
    <%= link_to "http://localhost:3000/letter_opener" , "/letter_opener", class: 'btncss' %>
    <%=  link_to "order一覧ページへ戻る", orders_path, class: 'btncss' %>
    <h3 class="mt-5">現在のsession[:cart_id]は <span class="session"><%= session[:cart_id] %></span> です</h3>
</div>

<div class="container">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="https://getbootstrap.com/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h2>Checkout form</h2>
        <p class="lead">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
    </div>
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <% if @cart_products.find_by(cart_id: session[:cart_id]) %>
                    <span><%= button_to 'カートを削除', cart_products_destroy_path, method: :delete, class: 'btn btn-danger' %></span>
                <% end %>
            </h4>

    <div class="col-md-8 order-md-1">
      <ul class="list-group mb-3 sticky-top">
        <% @cart_products.each do |cart_product| %>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0"><%= cart_product.product.name %></h6>
              <small class="text-muted">個数: <%= cart_product.quantity %></small>
            </div>
            <span class="text-muted"><%= number_to_currency(cart_product.product.price, unit: "¥", strip_insignificant_zeros: true ) %></span>
          </li>
        <% end %>

        <li class="list-group-item d-flex justify-content-between">
          <span>Total (USD)</span>
          <strong></strong>
        </li>
      </ul>
    </div>
            <form class="card p-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Promo code">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Redeem</button>
                    </div>
                </div>
            </form>
        </div>

        <%# =========== ordersのform============= %>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">請求先住所</h4>
            <%= form_with model: @order, url: orders_path,method: :post, local: true, data: { turbo: false } do |f|  %>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">First name(名前)</label>
                        <%= f.text_field :first_name, class: "form-control", :placeholder => "太郎" %>
                        <div class="invalid-feedback"> Valid first name is required. </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name(苗字)</label>
                        <%= f.text_field :last_name, class: "form-control", :placeholder => "山田" %>
                        <div class="invalid-feedback"> Valid last name is required. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="username">Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        <%= f.text_field :username, class: "form-control", :placeholder => "yamada01" %>
                        <div class="invalid-feedback" style="width: 100%;"> Your username is required. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email">Email <span class="text-muted">(Optional)</span></label>
                    <%= f.text_field :email, class: "form-control", :placeholder => "you@example.com" %>
                    <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                </div>
                <div class="mb-3">
                    <label for="address">Address</label>
                    <%= f.text_field :address, class: "form-control", :placeholder => "宮城県仙台市〇〇町2-5-7" %>
                    <div class="invalid-feedback"> Please enter your shipping address. </div>
                </div>
                <div class="mb-3">
                    <label for="address2">Address 2 <span class="text-muted">(任意)</span></label>
                    <%= f.text_field :address2, class: "form-control", :placeholder => "入力しなくてもよい" %>
                </div>
                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label for="country">Country</label>
                        <%= f.text_field :country, class: "form-control", :placeholder => "日本" %>
                        <div class="invalid-feedback"> Please select a valid country. </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="prefecture">prefecture(県)</label>
                        <%= f.text_field :prefecture, class: "form-control", :placeholder => "宮城県" %>
                        <div class="invalid-feedback"> Please provide a valid state. </div>
                    </div>
                </div>
                <hr class="mb-4">
                <div class="custom-control custom-checkbox">

                    <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
                </div>
                <div class="custom-control custom-checkbox">

                    <label class="custom-control-label" for="save-info">Save this information for next time</label>
                </div>
                <hr class="mb-4">
                <h4 class="mb-3">Payment</h4>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">

                        クレジットカード
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cc-name">カードの名義</label>
                        <%= f.text_field :credit_card_name, class: "form-control", :placeholder => "Taro Yamada" %>
                        <small class="text-muted">カードに表示されるフルネーム</small>
                        <div class="invalid-feedback"> Name on card is required </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="cc-number">カード番号</label>
                        <%= f.text_field :credit_card_number, class: "form-control", :placeholder => "4242424242424242" %>
                        <div class="invalid-feedback"> Credit card number is required </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="cc-expiration">有効期限</label>
                        <%= f.text_field :credit_card_expiration, class: "form-control", :placeholder => "12/25" %>
                        <div class="invalid-feedback"> Expiration date required </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="cc-cvv">CVV</label>
                            <%= f.text_field :credit_card_cvv, class: "form-control", :placeholder => "366" %>
                        <div class="invalid-feedback"> Security code required </div>
                    </div>
                </div>
                <hr class="mb-4">
                <%= f.submit "購入する",  class:"btn btn-primary btn-lg btn-block" %>
                <%= link_to '購入詳細ページへ', orders_path, class: 'btn btn-primary' %>
            <% end %>
        </div>

    </div>
    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">© 2017-2019 Company Name</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#">Privacy</a></li>
            <li class="list-inline-item"><a href="#">Terms</a></li>
            <li class="list-inline-item"><a href="#">Support</a></li>
        </ul>
    </footer>
</div>
